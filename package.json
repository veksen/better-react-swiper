{
  "name": "better-react-swiper",
  "version": "0.4.0-beta.2",
  "description": "Lightweight and simple React swiper component",
  "repository": {
    "type": "git",
    "url": "https://github.com/atefBB/better-react-swiper.git"
  },
  "author": [{
    "name": "Jean-Philippe Sirois",
    "email": "jp@veksen.net"
  }, {
    "name": "Atef Ben Ali",
    "email": "atef.bettaib@gmail.com"
  }],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "umd:main": "dist/better-react-swiper-2.umd.production.js",
  "module": "dist/better-react-swiper-2.es.production.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsdx build",
    "start": "tsdx watch",
    "test": "tsdx test --env=jsdom",
