  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "react-resize-detector": "^4.1.3",
    "react-swipeable": "^5.2.1",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/react-resize-detector": "^4.0.1",
    "@types/react-swipeable": "^4.3.0",
    "@types/styled-components": "^4.1.14",
    "husky": "^2.2.0",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^7.0.0",
    "tsdx": "^0.5.7",
    "tslib": "^1.9.3",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react-hooks": "^2.1.0",
